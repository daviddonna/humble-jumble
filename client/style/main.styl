@import "modes/wheel"
@import "modes/flat"
@import "modes/mobile"

header-height = 30px
incorrect-color = #a22

*
  box-sizing border-box

body
  font-family verdana,helvetica,arial,sans-serif
  color #333

#top-bar
  z-index 2
  position fixed
  top 0
  left 0
  right 0
  height header-height
  background-color #444
  color #fff
  padding 0 5px

  font-size 20px

  *
    margin-top 2px

#length-limits
  float right

  *
    font-size 15px

  input
    width 40px
    background-color inherit
    color inherit
    border 2px solid #888

#shuffled
  height 44px

  .shuffled-letter
    display inline-block
    font-size 35px
    margin 10px


.shuffled-letter
.answer-letter
  text-transform uppercase

.shuffled-letter.used
  color #aaa

#answer
#buttons
#shuffled
  display table

button
  border 3px solid #444
  color #333
  font-size 20px
  padding 5px
  border-radius 10px

#hint
  background-color #ddd

#skip
  background-color #ddd

#reshuffle
  background-color #ddd

#buttons button
  min-width 100px
  margin 5px

#main
  margin-top header-height
  padding-top 10px
  position relative

body.full
  #game > *
    margin-bottom 20px

  #shuffled
    padding-top 20px


#game > *
  margin-left auto
  margin-right auto

#finished
  width 180px

  tr
    display none
    &.missed
      color incorrect-color

  .word
    padding-left 5px

  .time
    padding-right 5px
    width 40px
    text-align right
    span:after
      content: "s"

body.full
  #main
    margin-right 180px

  #right-column
    position fixed
    top header-height
    bottom 0
    right 0
    overflow auto
    background-color #eee

#footer
  display table
  text-align center
  margin 20px auto 0 auto
  color #999

  span
    width 100%
  a
    color @color
    text-decoration none
    &:hover
      text-decoration underline