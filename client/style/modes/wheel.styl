.wheel
  height 400px
  width 400px
  background-color #f2f2f2
  position relative
  border 20px solid @background-color

  .shuffled-letter
    cursor pointer
    position absolute

    height 0px
    width 0px
    border
    border-radius 50%
    border 30px solid #ddd

    span
      display block
      width 30px
      text-align center
      margin-left -15px
      font-size 30px
      margin-top -20px