html
  title Humble Jumble
  link(rel='stylesheet', href='main.css')
  script(src="//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js")
  script(src='main.js')
  block header

  body
    #top-bar
      span Humble Jumble
      #length-limits
        span Word lengths:&nbsp;
        input#minLength(type="number", min="1", max="10", value=minLength)
        span &mdash;
        input#maxLength(type="number", min="2", max="20", value=maxLength)
    #main.flat
      #game
        #shuffled
        #answer
        #buttons
          button#skip
            span Skip
          button#hint
            span Hint
          button#reshuffle
            span Reshuffle
    #right-column
      table#finished